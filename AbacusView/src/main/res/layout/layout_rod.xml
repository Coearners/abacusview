<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="233dp">

    <ImageView
        android:id="@+id/rod"
        android:layout_width="5sp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_rod"
        android:layout_centerInParent="true" />
    <com.coearners.android.abacusview.HeavenBeadView
        android:id="@+id/heavenBead"
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_bead_red"
        android:layout_marginTop="15sp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_height="match_parent">

        <com.coearners.android.abacusview.EarthBeadView
            android:id="@+id/fourthBead"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_bead_red" />

        <com.coearners.android.abacusview.EarthBeadView
            android:id="@+id/thirdBead"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_bead_red"
            />
        <com.coearners.android.abacusview.EarthBeadView
            android:id="@+id/secondBead"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_bead_red"
            />
        <com.coearners.android.abacusview.EarthBeadView
            android:id="@+id/firstBead"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_bead_red"
            />
    </LinearLayout>


</RelativeLayout>